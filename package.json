{
    "name": "rat-map-server",
    "version": "1.0.0",
    "description": "Server for rat map, built with Express and Apollo",
    "main": "src/index.js",
    "scripts": {
        "start": "nodemon --exec babel-node src/index.js",
        "db-start": "pg_ctl -D /usr/local/var/postgres start",
        "db-stop": "pg_ctl -D /usr/local/var/postgres stop",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "Jen Lipton",
    "license": "MIT",
    "dependencies": {
        "apollo-server": "^2.9.9",
        "apollo-server-express": "^2.9.9",
        "cors": "^2.8.5",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-plugin-import": "^2.18.2",
        "express": "^4.17.1",
        "graphql": "^14.5.8",
        "nodemon": "^1.19.4",
        "pg": "^7.12.1",
        "sequelize": "^5.21.2",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "@babel/core": "^7.7.2",
        "@babel/node": "^7.7.0",
        "@babel/preset-env": "^7.7.1",
        "eslint": "^6.6.0"
    },
    "eslintConfig": {
        "extends": "airbnb-base",
        "env": {
            "es6": true,
            "browser": true
        },
        "rules": {
            "brace-style": [
                "error",
                "stroustrup"
            ],
            "comma-dangle": [
                "error",
                "never"
            ],
            "no-unused-vars": [
                "warn"
            ],
            "no-var": [
                "off"
            ],
            "one-var": [
                "off"
            ]
        }
    }
}
